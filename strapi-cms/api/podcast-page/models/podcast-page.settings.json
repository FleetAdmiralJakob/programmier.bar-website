{
  "kind": "singleType",
  "collectionName": "podcast_pages",
  "info": {
    "name": "Podcast",
    "description": "Der Inhalt der \"Podcast\"-Seite unserer Website."
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "meta_title": {
      "type": "string",
      "required": true,
      "maxLength": 42
    },
    "meta_description": {
      "type": "text",
      "maxLength": 160,
      "required": true
    },
    "intro_heading": {
      "type": "string",
      "required": true
    },
    "intro_text_1": {
      "type": "richtext",
      "required": true
    },
    "intro_text_2": {
      "type": "richtext",
      "required": true
    },
    "deep_dive_heading": {
      "type": "string",
      "required": true
    },
    "cto_special_heading": {
      "type": "string",
      "required": true
    },
    "news_heading": {
      "type": "string",
      "required": true
    },
    "cover_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    }
  }
}
