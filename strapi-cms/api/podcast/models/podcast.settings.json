{
  "kind": "collectionType",
  "collectionName": "podcasts",
  "info": {
    "name": "Podcasts",
    "description": "Der Inhalt der einzelnen Podcastfolgen unserer Website."
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "publish_at": {
      "type": "datetime",
      "required": true
    },
    "is_private": {
      "type": "boolean",
      "default": false,
      "required": true,
      "private": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["deep_dive", "cto_special", "news", "other"],
      "required": true
    },
    "number": {
      "type": "string",
      "regex": "^([1-9][0-9]{0,2}|#[1-9][0-9]{0,2}|[0-5][0-9]\\/2[0-9])$",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "richtext",
      "required": true,
      "unique": false
    },
    "transcript": {
      "type": "text",
      "unique": true
    },
    "audio_file": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["files"],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "cover_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "banner_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "audio_url": {
      "type": "string",
      "regex": "^(https?:\\/\\/[^\\s$.?#].[^\\s]*|)$"
    },
    "apple_url": {
      "type": "string",
      "regex": "^(https?:\\/\\/[^\\s$.?#].[^\\s]*|)$"
    },
    "google_url": {
      "type": "string",
      "regex": "^(https?:\\/\\/[^\\s$.?#].[^\\s]*|)$"
    },
    "spotify_url": {
      "type": "string",
      "regex": "^(https?:\\/\\/[^\\s$.?#].[^\\s]*|)$"
    },
    "members": {
      "via": "podcasts",
      "collection": "member",
      "dominant": true
    },
    "speakers": {
      "via": "podcasts",
      "collection": "speaker",
      "dominant": true
    },
    "picks_of_the_day": {
      "via": "podcast",
      "collection": "pick-of-the-day"
    },
    "tags": {
      "collection": "tag",
      "via": "podcasts",
      "dominant": true
    }
  }
}
