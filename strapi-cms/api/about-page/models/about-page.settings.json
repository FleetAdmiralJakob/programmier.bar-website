{
  "kind": "singleType",
  "collectionName": "about_pages",
  "info": {
    "name": "Über uns",
    "description": "Der Inhalt der \"Über uns\"-Seite unserer Website."
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "meta_title": {
      "type": "string",
      "required": true,
      "maxLength": 42
    },
    "meta_description": {
      "type": "text",
      "maxLength": 160,
      "required": true
    },
    "intro_text": {
      "type": "richtext",
      "required": true
    },
    "podcast_crew_heading": {
      "type": "string",
      "required": true
    },
    "behind_the_scenes_heading": {
      "type": "string",
      "required": true
    },
    "cover_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    }
  }
}
