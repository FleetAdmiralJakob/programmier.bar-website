{
  "kind": "singleType",
  "collectionName": "home_pages",
  "info": {
    "name": "Home",
    "description": "Der Inhalt der \"Home\"-Seite unserer Website."
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "meta_title": {
      "type": "string",
      "required": true,
      "maxLength": 60
    },
    "meta_description": {
      "type": "text",
      "maxLength": 160,
      "required": true
    },
    "intro_text": {
      "type": "string",
      "required": true
    },
    "podcast_heading": {
      "type": "string"
    },
    "podcasts": {
      "collection": "podcast"
    },
    "news": {
      "type": "richtext",
      "required": true
    },
    "video": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["videos"],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    }
  }
}
