{
  "kind": "collectionType",
  "collectionName": "meetups",
  "info": {
    "name": "Meetups",
    "description": "Der Inhalt der einzelnen Meetups (Veranstaltungen) unserer Website."
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "start_at": {
      "type": "datetime",
      "required": true
    },
    "end_at": {
      "type": "datetime",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "cover_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "gallery_images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "meetup_url": {
      "type": "string",
      "regex": "^(https?:\\/\\/[^\\s$.?#].[^\\s]*|)$"
    },
    "youtube_url": {
      "type": "string",
      "regex": "^(https?:\\/\\/[^\\s$.?#].[^\\s]*|)$"
    },
    "members": {
      "via": "meetups",
      "collection": "member",
      "dominant": true
    },
    "speakers": {
      "via": "meetups",
      "collection": "speaker",
      "dominant": true
    },
    "tags": {
      "collection": "tag",
      "via": "meetups",
      "dominant": true
    }
  }
}
